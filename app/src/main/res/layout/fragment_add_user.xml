<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".AddUserFragment">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addUser_editTextName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:hint="@string/prompt_name"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addUser_editTextSurname"
            app:layout_constraintTop_toBottomOf="@+id/addUser_editTextName"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/prompt_surname" android:inputType="textPersonName"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/addUser_editTextEmail"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/addUser_editTextSurname" android:layout_marginTop="30dp"
            android:hint="@string/prompt_email"/>


    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/addUser_singupButton"
            app:layout_constraintTop_toBottomOf="@+id/addUser_editTextEmail"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:layout_marginRight="100dp" android:layout_marginEnd="100dp"
            app:layout_constraintHorizontal_bias="0.0" android:text="@string/button_signup"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/userDataRecyclerView"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/addUser_singupButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/addUser_ProgressBar"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="@+id/userDataRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
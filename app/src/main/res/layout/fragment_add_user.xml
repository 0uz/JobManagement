<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".AddUserFragment">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/singupButton"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Name" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp" android:layout_marginEnd="30dp" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" android:layout_marginTop="30dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:hint="@string/prompt_name"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/prompt_surname" android:inputType="textPersonName"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" android:layout_marginTop="30dp"
            android:hint="@string/prompt_email"/>


    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/singupButton"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:layout_marginRight="100dp" android:layout_marginEnd="100dp"
            app:layout_constraintHorizontal_bias="0.0" android:text="@string/button_signup"/>

</androidx.constraintlayout.widget.ConstraintLayout>